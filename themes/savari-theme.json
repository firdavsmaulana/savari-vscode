{
  "$schema": "vscode://schemas/color-theme",
  "name": "Savari Themes",
  "type": "dark",
  "semanticHighlighting": true,
  "colors": {
    "menu.background": "#101010",
    "menu.foreground": "#E0E0E0",
    "menu.separatorBackground": "#2F451F",
    // "menu.selectionBorder": "#98C379",
    // "menu.selectionBackground": "#3A3A3A",
    // "menu.selectionForeground": "#FFFFFF",
    "titleBar.activeBackground": "#101010",
    "titleBar.activeForeground": "#E0E0E0",
    "editor.background": "#101010",
    "editor.foreground": "#E0E0E0",
    "editor.selectionBackground": "#3A3A3A",
    "editor.lineHighlightBackground": "#1A1A1A",
    "editorCursor.foreground": "#E0E0E0",
    "tab.activeForeground": "#E0E0E0",
    "tab.inactiveForeground": "#A0A0A0",
    "tab.activeBackground": "#101010",
    "tab.inactiveBackground": "#2A2A2A",
    "tab.activeBorder": "#E5C07B",
    "activityBar.background": "#101010",
    "activityBar.foreground": "#98C379",
    "activityBar.inactiveForeground": "#E0E0E0",
    "activityBarBadge.background": "#2F451F",
    // "activityBarBadge.foreground": "#E5C07B",
    "sideBar.background": "#101010",
    "sideBar.foreground": "#E0E0E0",
    "list.activeSelectionBackground": "#2F451F",
    "list.inactiveSelectionBackground": "#2F451F",
    "list.hoverBackground": "#2F451F",
    "statusBar.background": "#101010",
    "statusBar.foreground": "#E0E0E0",
    "panel.background": "#101010",
    "focusBorder": "#98C379",
    "button.background": "#2F451F",
    "button.foreground": "#E0E0E0",
    "textLink.foreground": "#98C379",
    "textLink.activeForeground": "#E5C07B"
    // "badge.background": "#FFCFA8",
    // "badge.foreground": "#101010",
    // "editorWidget.background": "#101010",
    // "editorHoverWidget.background": "#161616",
    // "editorHoverWidget.border": "#282828"
  },
  "semanticTokenColors": {
    "variable": "#3AA6D6",
    "parameter": "#9CDCFE99",
    "function": "#DCDCAA",
    "method": "#DCDCAA",
    "property": "#4EC9B0",
    "class": "#4EC9B0",
    "type": "#4EC9B0",
    "comment": "#6A9955",
    "keyword": "#569CD6",
    "number": "#B5CEA8",
    "string": "#C3A764"
  },
  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#707070",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["keyword", "storage"],
      "settings": {
        "foreground": "#E0E0E0"
      }
    },
    {
      "scope": ["entity.name", "entity.other"],
      "settings": {
        "foreground": "#E5C07B"
      }
    },
    {
      "scope": "string",
      "settings": {
        "foreground": "#98C379"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "#E5C07B"
      }
    },
    {
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#FA8794"
      }
    },
    {
      "scope": ["support"],
      "settings": {
        "foreground": "#E5C07B"
      }
    }
  ]
}
